<script>
	$(document).ready(function(){
		$("#btn_register_cnode").click(function(){
			$("#register_cnode").toggle(500);
			$('html, body').animate({
				scrollTop: $("#register_cnode").offset().top-110
			}, 1000);
			
			$('#form_name').focus();
		});
		
		serial = '';
	
		
		$("#contact_form").submit(function(e) {
			e.preventDefault();
			serial = $(this).serialize();
		}).validate({
            rules: {
                name: "required",
                email: {
					required: true,
					email: true
				},
                phone: {
                    required: true,
                    minlength: 5,
                },
				note: {
                    required: true,
                    minlength: 10,
                },
            },
            messages: {
                name: "Vui lòng nhập họ tên",
                email: {
					required: "Vui lòng nhập email",
				},
                phone: {
                    required: "Vui lòng nhập số điện thoại",
                    minlength: "Vui lòng nhập đúng số điện thoại"
                },
				note: {
                    required: "Vui lòng nhập cấu hình dự kiến",
					minlength: "Nội dung phải ít nhất là 10 ký tự"
                },
            },
			submitHandler: function() {
					
				var url = "{$WEB_ROOT}/sendmailadmin.php";
				
				$.ajax({
					type: "POST",
					url: url,
					data: serial,
					beforeSend: function(){
						console.log("Loading...");
						$('#loading').show();
					},
					success: function (data)
					{
						console.log(data);
						$('#loading').hide();
						data = jQuery.parseJSON(data);

                        if(data.result == 'success') {
                            alert('Đăng ký sử dụng thành công, chúng tôi sẽ có phản hồi sớm đến bạn!');
                            $('#contact_form')[0].reset();
                        }
					}
				});
					
			}
        });
		
	});
</script>